[include]
	path = ~/.gitconfig.secret

[core]
    excludesfile = ~/.gitignore

[color]
	status = auto
	diff = auto
	branch = auto
	interactive = auto
	ui = auto

[merge]
	conflictstyle = diff3

[rebase]
	autosquash = true

[branch]
	autosetuprebase = always

[submodule]
	recurse = true

[credential]
	helper = store

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
